$responseAnswerli = $('#answer_<%= @response.answer.id %>');
$correctAnswerli = $('#answer_<%= @response.correct_answer.id %>');

$responseAnswerli.addClass('list-group-item-danger');
$correctAnswerli
  .removeClass('list-group-item-danger')
  .addClass('list-group-item-success');

$('#character').text('<%= @response.correct_character.name %>');
$('#result').text('<%= flash[:notice] %>')
$('input[type=submit]').hide();
$('#try-again').removeClass('hidden');

$form = $('#new_response');
$form.find('input:radio').prop('disabled', true);
$form.find('*')
  .removeClass('clickable')
  .unbind('click')
  .addClass('not-allowed');
